<h2>Orders</h2>

<div class="container">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Po number</th>
        <th>Shipment require date</th>
        <th>Order date</th>
        <th>Ship to</th>
        <th>Reference</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.po_number, order %></td>
          <td><%= order.shipment_require_date %></td>
          <td><%= order.order_date %></td>
          <td><%= order.ship_to %></td>
          <td><%= order.reference %></td>
          <td><%= link_to 'Edit', edit_order_path(order), class: "btn-primary btn-sm" %></td>
          <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you  sure?' }, class: "btn-warning btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Order', new_order_path, class: "btn btn-info" %>
