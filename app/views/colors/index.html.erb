<h2>Colours</h2>

<div class="container">
  <table class="table table-hover" style="width: 800px">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @colors.each do |color| %>
        <tr>
          <td><%= link_to color.name, color %></td>
          <td><%= link_to 'Edit', edit_color_path(color), class: "btn btn-primary btn-sm" %></td>
          <td><%= link_to 'Destroy', color, method: :delete, class: "btn btn-warning btn-sm" ,data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Color', new_color_path, class: "btn btn-info" %>
