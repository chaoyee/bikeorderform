<h2>Sizes</h2>

<div class="container">
  <table class="table table-hover" style="width: 800px">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead
    <tbody>
      <% @sizes.each do |size| %>
        <tr>
          <td><%= link_to size.name, size %></td>
          <td><%= link_to 'Edit', edit_size_path(size), class: "btn btn-primary btn-sm" %></td>
          <td><%= link_to 'Destroy', size, method: :delete, class: "btn btn-warning btn-sm" , data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= generate_pagination(@sizes) %>
</div>
<br>

<%= link_to 'New Size', new_size_path, class: 'btn btn-info' %>
