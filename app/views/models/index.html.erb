<h2>Models</h2>

<div class="container">
  <table class="table table-hover" style="width: 800">
    <thead>
      <tr>
        <th>Model Name</th>
        <th>Price (USD)</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @models.each do |model| %>
        <tr>
          <td size="100"><%= link_to(model.name, model_path(model)) %></td>
          <td><%= model.price %></td>
          <td align=center><%= link_to 'Edit', edit_model_path(model), class: "btn btn-primary btn-sm" %></td>
          <td align=center><%= link_to 'Destroy', model, method: :delete, class: "btn btn-warning btn-sm", data: {  confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= generate_pagination(@models) %>
</div>

<br>

<%= link_to 'New Model', new_model_path, class: "btn btn-info btn-sm"  %>
